body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

#menu
  padding: 10px
  
#jim
  padding: 50px
  a
    color: #00B7FF
  #main
  #txt
    margin-left auto
    margin-right auto
    width 100%
    height 400px
    ime-mode disabled

res_hover()
  background-color #2e3436
  color  #d3d7cf

#hwr
  #app
    position relative
    top 0px
    left 0px
    right 0px
    bottom 0px
    padding 10px
    .txt
      padding-bottom 20px
      #txt
        width 100%
        height 24px
    #input
      .pad
        float left
        position relative
        top 0px
        left 0px
        width 400px
        height 400px
        #pad
          border 1px
          border-style solid
          border-radius 3px
      .results
        float left
        position relative
        top 0px
        left 0px
        width 540px
        height 400px
        padding-left 20px
        padding-right 20px
        .result
          display inline-block
          text-align center
          width 100px
          height 100px
          font-size 60px
          cursor pointer
          cursor hand     
        .result:hover
          border-radius 3px
          res_hover()
        #clear
          display none
          width 500px
          text-align center
          margin-top 5px
          font-size 40px
          border 1px
          border-style solid
          border-radius 3px
          cursor pointer
          cursor hand     
        #clear:hover
          res_hover()


.messagesOuter
  position relative
  top -20px
  left 0px
  right 0px
  height 0px
  z-index 1000
  .messages
    display none
    border-radius 3px
    margin 0px auto 1px auto
    padding-top 1px
    padding-bottom 1px
    width 60%
    color #2e3436
    background-color #fce94f
    border 1px solid #c4a000
    text-align center
    overflow visible
